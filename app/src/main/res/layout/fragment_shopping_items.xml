<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.grantu.myshoppinglist.UI.Fragments.ShoppingItemsFragment">

        <ListView
            android:id="@+id/shopping_list"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:clickable="true"
            android:layout_width="match_parent" />

        <include
            android:id="@+id/emptylayout"
            layout="@layout/shopping_list_empty_layout"/>
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:padding="@dimen/padding_shopping_list_header"
        android:textStyle="bold"
        android:text="@string/shop_list_total_price_label"
        android:textSize="@dimen/primary_text_dimen_header"
        android:background="@drawable/shoplist_header_background"
        android:layout_gravity="center_vertical" />
</LinearLayout>
